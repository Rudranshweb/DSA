public class ReverseNumber {
    static int rev = 0;
    public static void reverse(int n) {
        if (n == 0) {
            return;
        }
        int lastDigit = n % 10;
        rev = rev * 10 + lastDigit;
        reverse(n / 10);
    }
    public static void main(String[] args) {
        int n = 1234;
        reverse(n);
        System.out.println("Reversed number is " + rev);
    }
}
