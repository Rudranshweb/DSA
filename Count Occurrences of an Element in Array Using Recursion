public class CountOccurrence {

    public static int countOcc(int arr[], int key, int i) {
        if (i == arr.length) {
            return 0;
        }

        int countInRest = countOcc(arr, key, i + 1);

        if (arr[i] == key) {
            return 1 + countInRest;
        } else {
            return countInRest;
        }
    }

    public static void main(String[] args) {
        int arr[] = {2, 3, 2, 4, 2, 5};
        int key = 2;

        int result = countOcc(arr, key, 0);
        System.out.println("Count of " + key + " is " + result);
    }
}
