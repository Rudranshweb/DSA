public class StringLengthRecursion {

    public static int length(String s) {
        if (s.equals("")) {
            return 0;
        }
        return 1 + length(s.substring(1));
    }

    public static void main(String[] args) {
        String s = "rudransh";
        int result = length(s);
        System.out.println("Length of string is " + result);
    }
}
