public class CircularKadane {

    public static int maxSubarraySumCircular(int[] arr) {

        int totalSum = 0;
        int currMax = 0, maxSum = Integer.MIN_VALUE;
        int currMin = 0, minSum = Integer.MAX_VALUE;

        for (int i = 0; i < arr.length; i++) {
            totalSum += arr[i];

            currMax += arr[i];
            maxSum = Math.max(maxSum, currMax);
            if (currMax < 0) currMax = 0;

            currMin += arr[i];
            minSum = Math.min(minSum, currMin);
            if (currMin > 0) currMin = 0;
        }

        if (maxSum < 0) {
            return maxSum;
        }

        return Math.max(maxSum, totalSum - minSum);
    }

    public static void main(String[] args) {
        int[] arr = {5, -2, 3, 4};
        System.out.println("Maximum Circular Subarray Sum = " 
                            + maxSubarraySumCircular(arr));
    }
}
